<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.find.FindFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/findImgCarousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/findImgFrame"
            android:layout_alignBottom="@id/findImgFrame" />

        <ImageView
            android:id="@+id/findImgFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/plane_window"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/findImgCarousel">

            <Button
                android:id="@+id/findImgBtn1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/quantum_grey"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/findImgBtn2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/quantum_grey"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/findImgBtn3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/quantum_grey"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/plane_chair"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp">

        <Button
            android:id="@+id/foundHuntBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hunt_btn"
            android:backgroundTint="@color/orange"
            android:layout_alignParentBottom="true"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>