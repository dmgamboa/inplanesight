<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/flightInfoHeaderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/flightInfoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BCI401"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/flightInfoHeaderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/flightInfoStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/flightInfoHeaderTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terminal"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/flightInfoTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"/>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flightInfoHeaderOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="From"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flightInfoOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burnaby / BBY"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flightInfoHeaderDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="To"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flightInfoDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vancouver / YVR"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flightInfoHeaderBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boarding Time"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/flightInfoBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21:23" />
        </LinearLayout>

    </TableRow>

</TableLayout>